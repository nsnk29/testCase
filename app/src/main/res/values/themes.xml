<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestCase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="background">@color/middle_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ImageInfoTextStyle">
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginTop">@dimen/large_dimen</item>
        <item name="android:layout_marginBottom">@dimen/large_dimen</item>
        <item name="android:drawablePadding">@dimen/small_dimen</item>>
        <item name="android:textColor">@color/text_thumbs</item>>
        <item name="android:textSize">@dimen/thumbs_text_size</item>>
        <item name="android:textStyle">bold</item>>
        <item name="android:layout_width">wrap_content</item>>
        <item name="android:layout_height">wrap_content</item>>
    </style>
</resources>